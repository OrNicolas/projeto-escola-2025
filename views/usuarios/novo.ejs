<%- include('../includes/header.ejs', { titulo: 'Novo Usuário' }) %>

    <style>
        .bg-batman-dark {
            background-color: #1a1a1a;
        }

        .text-batman-yellow {
            color: #FFD700;
        }

        .bg-batman-yellow {
            background-color: #FFD700;
            color: #1a1a1a;
        }

        .hover\:bg-batman-yellow-dark:hover {
            background-color: #e0b400;
        }
    </style>

    <main class="min-h-screen bg-batman-dark text-white p-6 md:p-10">
        <div class="max-w-3xl mx-auto">
            <a href="/usuarios/listar"
                class="text-gray-400 hover:text-batman-yellow transition duration-150 mb-4 inline-block">
                <i class="fas fa-arrow-left mr-2"></i> Voltar para a Lista de Usuários
            </a>

            <h2 class="text-4xl font-extrabold border-b-4 border-batman-yellow pb-3 mb-8 text-batman-yellow">
                Adicionar Novo Usuário
            </h2>

            <form action="/usuarios/novo" method="post" id="userForm"
                class="space-y-6 p-8 rounded-xl shadow-2xl bg-gray-900 border border-gray-700">

                <div class="space-y-1">
                    <label for="nome" class="block text-sm font-medium text-gray-300">Nome Completo</label>
                    <input id="nome" name="nome" type="text" required placeholder="Digite o nome do usuário" class="w-full p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-white placeholder-gray-400
                 focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                </div>

                <div class="space-y-1">
                    <label for="email" class="block text-sm font-medium text-gray-300">E-mail (Login)</label>
                    <input id="email" name="email" type="email" required placeholder="usuario@dominio.com" class="w-full p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-white placeholder-gray-400
                 focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                </div>

                <div class="space-y-1">
                    <label for="senha" class="block text-sm font-medium text-gray-300">Senha</label>
                    <input id="senha" name="senha" type="password" required placeholder="********" class="w-full p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-white placeholder-gray-400
                 focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                </div>

                <div class="space-y-1">
                    <label for="tipo_usuario" class="block text-sm font-medium text-gray-300">Tipo de Usuário</label>
                    <select id="tipo_usuario" name="tipo_usuario" required class="w-full p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-gray-300
                 focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                        <option value="">Selecione o Tipo</option>
                        <option value="Administrador">Administrador</option>
                        <option value="Vendedor">Vendedor</option>
                        <option value="Estoque">Estoque</option>
                        <option value="Comum">Comum</option>
                    </select>
                </div>

                <div class="space-y-1">
                    <label for="ativo" class="block text-sm font-medium text-gray-300">Status</label>
                    <select id="ativo" name="ativo" required class="w-full p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-gray-300
                 focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                        <option value="TRUE">Ativo</option>
                        <option value="FALSE">Inativo</option>
                    </select>
                </div>

                <div class="flex justify-end space-x-4 pt-4">
                    <button type="submit" class="py-3 px-8 flex items-center justify-center rounded-lg bg-batman-yellow text-gray-900 font-bold shadow-xl
                 hover:bg-batman-yellow-dark transition duration-300 transform hover:scale-105">
                        <i class="fas fa-user-plus mr-2"></i> Adicionar Usuário
                    </button>

                    <a href="/usuarios/listar" class="py-3 px-8 flex items-center justify-center rounded-lg text-white bg-gray-700 font-medium
                 hover:bg-gray-600 transition duration-200 shadow-md">
                        Cancelar
                    </a>
                </div>

            </form>
        </div>
    </main>

    <%- include('../includes/footer.ejs') %>