<%- include ('../includes/header.ejs', {titulo: 'Lista de produtos' }) %>
    <style>
        .bg-batman-dark {
            background-color: #1a1a1a;
            /* Preto muito escuro */
        }

        .text-batman-yellow {
            color: #FFD700;
            /* Amarelo Dourado */
        }

        .bg-batman-yellow {
            background-color: #FFD700;
            color: #1a1a1a;
            /* Texto escuro no botão amarelo */
        }

        .hover\:bg-batman-yellow-dark:hover {
            background-color: #e0b400;
        }
    </style>

    <main class="min-h-screen bg-batman-dark text-white p-6 md:p-10">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-4xl font-extrabold border-b-4 border-batman-yellow pb-3 mb-8 text-batman-yellow">
                Lista de Produtos
            </h2>

            <form action="/produtos/listar" method="get"
                class="flex flex-wrap items-end gap-4 p-4 rounded-xl shadow-2xl bg-gray-900 mb-10">

                <div class="flex-grow">
                    <input type="text" name="busca" placeholder="Buscar por produto"
                        class="w-full p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-white placeholder-gray-400 focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                </div>

                <div>
                    <select name="ordem"
                        class="p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-white focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                        <option value="nome">Ordernar por Nome</option>
                        <option value="preco">Ordernar por Preço (crescente)</option>
                        <option value="preco desc">Ordernar por Preço (decrescente)</option>
                    </select>
                </div>

                <div>
                    <select name="ativo"
                        class="p-3 rounded-lg border-2 border-gray-700 bg-gray-800 text-white focus:ring-2 focus:ring-batman-yellow focus:border-batman-yellow transition duration-150">
                        <option value="true">Ativo</option>
                        <option value="false">Não Ativo</option>
                    </select>
                </div>

                <button type="submit"
                    class="p-3 px-8 rounded-lg bg-batman-yellow text-gray-900 font-bold shadow-lg hover:bg-batman-yellow-dark transition duration-200">
                    Buscar
                </button>
            </form>

            <a href="/produtos/novo" class="p-3 px-8 rounded-lg bg-batman-yellow text-gray-900 font-bold shadow-lg hover:bg-batman-yellow-dark transition duration-200 mb-10">Adicionar Produto</a>

            <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 mt-10">
                <% for (let produto of produtos) { %>
                    <div
                        class="bg-gray-800 rounded-xl overflow-hidden shadow-2xl border-4 border-gray-700 hover:border-batman-yellow transition duration-300 transform hover:scale-[1.02]">

                        <img src="<%=produto.foto === null || produto.foto == '' ? 'https://via.placeholder.com/400x300?text=Sem+Foto' : produto.foto %>"
                            alt="<%=produto.nome %>"
                            class="w-full h-48 object-cover transition duration-500 ease-in-out hover:opacity-90">

                        <div class="p-5">
                            <h3 class="text-2xl font-bold mb-2 text-batman-yellow">
                                <%=produto.nome %>
                            </h3>
                            <p class="text-xl text-gray-300">Preço: R$ <%=produto.preco %>
                            </p>
                        </div>
                        <div class="p-5">
                          
                            <p class="text-xl text-gray-300">Estoque: <%=produto.quantidade_estoque %>
                            </p>
                        </div>

                        <div class="p-4 border-t border-gray-700 flex justify-end space-x-3">
                            <a href="/produtos/editar/<%= produto.id_produto%>"
                                class="py-2 px-4 rounded-lg bg-gray-700 text-batman-yellow font-medium hover:bg-gray-600 transition duration-200">
                                Editar
                            </a>
                            <form action="/produtos/excluir/<%= produto.id_produto%>" method="post">
                                <button type="submit"
                                    class="py-2 px-4 rounded-lg text-white bg-red-700 font-medium hover:bg-red-800 transition duration-200">
                                    Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </section>

            <div class="mt-12 text-center">
                <a href="/produtos/novo"
                    class="inline-block py-3 px-10 rounded-full bg-batman-yellow text-gray-900 font-extrabold text-lg shadow-2xl hover:bg-batman-yellow-dark transition duration-300 transform hover:scale-105">
                    Adicionar Produto
                </a>
            </div>
        </div>
    </main>
    <%- include ('../includes/footer.ejs') %>