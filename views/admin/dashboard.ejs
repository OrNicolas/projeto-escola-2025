<%- include ('../includes/header.ejs', {titulo: 'Dashboard' }) %>
    <main class="w-full px-4 bg-gray-900 min-h-screen">
        <h2 class="text-2xl font-semibold bg-gray-700 text-yellow-400 py-4 shadow-lg mb-4 rounded-b-lg">
            Dashboard - Gerenciamento de Estoque
        </h2>

        <section class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:grid-cols-4 mb-8">

            <div
                class="bg-gray-800 p-6 shadow-xl rounded-lg text-center border-l-4 border-yellow-400 transform hover:scale-105 transition duration-300">
                <h4 class="text-gray-400 font-medium">Total de Produtos</h4>
                <p class="text-4xl font-extrabold text-yellow-400 mt-3">
                    <%= totalProdutos %>
                </p>
            </div>

            <div
                class="bg-gray-800 p-6 shadow-xl rounded-lg text-center border-l-4 border-yellow-400 transform hover:scale-105 transition duration-300">
                <h4 class="text-gray-400 font-medium">Total de Usuários</h4>
                <p class="text-4xl font-extrabold text-yellow-400 mt-3">
                    <%= totalUsuarios %>
                </p>
            </div>

            <div
                class="bg-gray-800 p-6 shadow-xl rounded-lg text-center border-l-4 border-yellow-400 transform hover:scale-105 transition duration-300">
                <h4 class="text-gray-400 font-medium">Total de Categorias</h4>
                <p class="text-4xl font-extrabold text-yellow-400 mt-3">
                    <%= totalCategorias %>
                </p>
            </div>

            <div
                class="bg-gray-800 p-6 shadow-xl rounded-lg text-center border-l-4 border-yellow-400 transform hover:scale-105 transition duration-300">
                <h4 class="text-gray-400 font-medium">Total de Movimentações</h4>
                <p class="text-4xl font-extrabold text-yellow-400 mt-3">
                    <span id="totalMovimentacoesGeral">--</span>
                </p>
            </div>

        </section>

        <section class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-gray-800 shadow-xl rounded-lg p-3">
                <p class="bg-gray-900 text-yellow-400 p-3 rounded-t-lg font-semibold text-lg">Total Categorias</p>
                <div class="p-4">
                    <canvas id="TotalCategoriasGrafico"></canvas>
                </div>
            </div>

            <div class="bg-gray-800 shadow-xl rounded-lg p-3">
                <p class="bg-gray-900 text-yellow-400 p-3 rounded-t-lg font-semibold text-lg">Total de produtos em estoque</p>
                <div class="p-4">
                    <canvas id="GraficoTotalProdutos"></canvas>
                </div>
            </div>

            <div class="bg-gray-800 shadow-xl rounded-lg p-3">
                <p class="bg-gray-900 text-yellow-400 p-3 rounded-t-lg font-semibold text-lg">Total de Usuarios</p>
                <div class="p-4">
                    <canvas id="GraficoTotalUsuarios" class="max-h-64"></canvas>
                </div>
            </div>
        </section>

        <section class="pb-8">
            <div class="bg-gray-800 shadow-xl rounded-lg">
                <p class="bg-gray-900 text-yellow-400 p-4 rounded-t-lg font-semibold text-lg">⚠️ Produtos com Estoque Abaixo do Mínimo</p>
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-400">
                        <thead>
                            <tr class="text-xs text-yellow-400 uppercase bg-gray-900 border-b border-yellow-400">
                                <th scope="col" class="py-3 px-6">Produto</th>
                                <th scope="col" class="py-3 px-6">Categoria</th>
                                <th scope="col" class="py-3 px-6 text-center">Estoque Atual</th>
                                <th scope="col" class="py-3 px-6 text-center">Estoque Mínimo</th>
                                <th scope="col" class="py-3 px-6 text-center">Diferença</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let produto of produtosBaixoEstoque ) { %>
                                <tr class="bg-gray-800 border-b border-gray-700 hover:bg-gray-700">
                                    <th scope="row" class="py-4 px-6 font-medium text-white whitespace-nowrap">
                                        <%= produto.nome %>
                                    </th>
                                    <td class="py-4 px-6">
                                        <%= produto.nome_categoria %>
                                    </td>
                                    <td class="py-4 px-6 text-center <%= produto.quantidade_estoque < produto.estoque_minimo ? 'text-red-500 font-bold' : 'text-green-400' %>">
                                        <%= produto.quantidade_estoque %>
                                    </td>
                                    <td class="py-4 px-6 text-center text-yellow-400 font-semibold">
                                        <%= produto.estoque_minimo %>
                                    </td>
                                    <td class="py-4 px-6 text-center <%= (produto.quantidade_estoque - produto.estoque_minimo) < 0 ? 'text-red-500 font-bold' : 'text-green-400' %>">
                                        <%= produto.quantidade_estoque - produto.estoque_minimo %>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <script>
            // Dados injetados do EJS — CORRIGIDO:
            const produtosBaixoEstoque = <%- JSON.stringify(produtosBaixoEstoque) %>;
            const totalUsuarios = <%= totalUsuarios %>;
            const totalProdutos = <%= totalProdutos %>;
            const totalCategorias = <%= totalCategorias %>;

            function criarDadosUsuariosMock(total) {
                const t = parseInt(total);
                if (t === 0) return { labels: ['Nenhum Usuário'], data: [0] };

                const admin = Math.max(1, Math.floor(t * 0.10));
                const gerente = Math.max(1, Math.floor(t * 0.20));
                const funcionario = t - admin - gerente;

                return {
                    labels: ['Administrador', 'Gerente', 'Estoquista'],
                    data: [admin, gerente, funcionario]
                };
            }

            function criarGraficoTotalCategorias() {
                const ctxCategorias = document.getElementById('TotalCategoriasGrafico');

                const contagemCategorias = produtosBaixoEstoque.reduce((acc, produto) => {
                    acc[produto.nome_categoria] = (acc[produto.nome_categoria] || 0) + 1;
                    return acc;
                }, {});

                const labels = Object.keys(contagemCategorias);
                const dados = Object.values(contagemCategorias);

                if (labels.length < 4) {
                    labels.push('Outras Categ.', 'Sem Estoque Mínimo');
                    dados.push(Math.round(totalCategorias / 3) || 2, Math.round(totalCategorias / 6) || 1);
                }

                const cores = [
                    'rgba(245, 158, 11, 0.8)',
                    'rgba(59, 130, 246, 0.8)',
                    'rgba(16, 185, 129, 0.8)',
                    'rgba(239, 68, 68, 0.8)',
                    'rgba(147, 51, 234, 0.8)'
                ];

                new Chart(ctxCategorias, {
                    type: 'doughnut',
                    data: { labels, datasets: [{ data: dados, backgroundColor: cores, borderColor: '#1f2937', borderWidth: 1 }] },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'right', labels: { color: '#e5e7eb' } } } }
                });
            }

            function criarGraficoTotalProdutos() {
                const ctxProdutos = document.getElementById('GraficoTotalProdutos');

                const topProdutosEmAlerta = produtosBaixoEstoque.slice(0, 5);

                const labels = topProdutosEmAlerta.map(p => p.nome);
                const estoqueAtual = topProdutosEmAlerta.map(p => p.quantidade_estoque);
                const estoqueMinimo = topProdutosEmAlerta.map(p => p.estoque_minimo);

                if (labels.length === 0) {
                    labels.push('Prod A', 'Prod B', 'Prod C');
                    estoqueAtual.push(5, 10, 3);
                    estoqueMinimo.push(10, 15, 8);
                }

                new Chart(ctxProdutos, {
                    type: 'bar',
                    data: {
                        labels,
                        datasets: [
                            { label: 'Estoque Atual', data: estoqueAtual, backgroundColor: '#f59e0b' },
                            { label: 'Estoque Mínimo', data: estoqueMinimo, backgroundColor: '#ef4444' }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: { beginAtZero: true, ticks: { color: '#e5e7eb' }, grid: { color: 'rgba(255,255,255,0.1)' } },
                            x: { ticks: { color: '#e5e7eb' }, grid: { color: 'rgba(255,255,255,0.1)' } }
                        }
                    }
                });
            }

            function criarGraficoTotalUsuarios() {
                const ctxUsuarios = document.getElementById('GraficoTotalUsuarios');

                const dadosUsuarios = criarDadosUsuariosMock(totalUsuarios);

                const cores = [
                    'rgba(16, 185, 129, 0.8)',
                    'rgba(59, 130, 246, 0.8)',
                    'rgba(245, 158, 11, 0.8)',
                    'rgba(147, 51, 234, 0.8)'
                ];

                new Chart(ctxUsuarios, {
                    type: 'pie',
                    data: {
                        labels: dadosUsuarios.labels,
                        datasets: [{ data: dadosUsuarios.data, backgroundColor: cores, borderColor: '#1f2937', borderWidth: 1 }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'right', labels: { color: '#e5e7eb' } } }
                    }
                });
            }

            function atualizarContadorMovimentacoes() {
                const entradas = [];
                const saidas = [];
                const total = entradas.reduce((a,b)=>a+b,0) + saidas.reduce((a,b)=>a+b,0);
                document.getElementById('totalMovimentacoesGeral').textContent = total;
            }

            document.addEventListener('DOMContentLoaded', () => {
                atualizarContadorMovimentacoes();
                criarGraficoTotalCategorias();
                criarGraficoTotalProdutos();
                criarGraficoTotalUsuarios();
            });
        </script>

        <%- include ('../includes/footer.ejs') %>
